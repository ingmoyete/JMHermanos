<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.Title</title>
    <meta name="description" content= "@ViewBag.MetaDescription">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Place favicon.ico in the root directory -->
    <!-- CSS STYLE ============================================================ -->
    @Styles.Render("~/Content/css")
    <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css' />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- NAVIGATION ============================================================ -->
    <div class="container-fluid navbarWrapper" id="navigation">
        <nav class="navbar navbar-default clearNavbar" role="navigation">

            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header hidden-md hidden-sm hidden-lg">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <div class="headTitleBrand yellowFont">JMHermanos</div>
                    <div class="headDescriptionBrand whiteFont">20 Años de experiencia en Albañileria</div>
                </a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav CenterNavbar" id="ulMenu">

                    <li>
                        <a href= "/@Resources.Routes.urlHome">
                            <div class="lightGreen" id="firstButton">
                                <span class="fa fa-home"></span>
                                <span class="title">@Resources.Routes.anchorHome</span>
                            </div>
                        </a>
                    </li>

                    <li>
                        <a href= "/@Resources.Routes.urlTrabajos">
                            <div class="strongGreen">
                                <span class="fa fa-camera"></span>
                                <span class="title">@Resources.Routes.anchorNuestrosTrabajos</span>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href= "/@Resources.Routes.urlPresupuesto">
                            <div class="yellow">
                                <span class="fa fa-file-text"></span>
                                <span class="title">@Resources.Routes.anchorPresupuesto</span>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href= "/@Resources.Routes.urlContacto">
                            <div class="gray" id="lastButton">
                                <span class="fa fa-phone"></span>
                                <span class="title">@Resources.Routes.anchorContacto</span>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- end collapse -->
        </nav>
        <!-- end nav -->

    </div>

    <!-- BODY ======================================================= -->
    @RenderBody()

    <!-- FOOTER AND BACK TO END ======================================================= -->
    <div class="row" id="footer">
        <ul class="col-sm-6 col-xs-12">
            <li>
                <a href="/@Resources.Routes.urlHome">@Resources.Routes.anchorHome</a>
                <ul></ul>
            <li>
                <a href="/@Resources.Routes.urlConocenos">Conocenos</a>
                <ul>
                    <li><a href="@Resources.Routes.urlQuienSomos">@Resources.Routes.anchorQuienSomos</a></li>
                    <li><a href="@Resources.Routes.urlVideo">@Resources.Routes.anchorVideo</a></li>
                </ul>
            </li>

            <li>
                <a href="/@Resources.Routes.urlTrabajos">@Resources.Routes.anchorNuestrosTrabajos</a>
                <ul>
                    <li><a href="/@Resources.Routes.urlTrabajos/@Resources.Routes.urlBaño">@Resources.Routes.anchorBaño</a></li>
                    <li><a href="/@Resources.Routes.urlTrabajos/@Resources.Routes.urlCocinas">@Resources.Routes.anchorCocinas</a></li>
                    <li><a href="/@Resources.Routes.urlTrabajos/@Resources.Routes.urlDetalles">@Resources.Routes.anchorDetalles</a></li>
                    <li><a href="/@Resources.Routes.urlTrabajos/@Resources.Routes.urlFachadas">@Resources.Routes.anchorFachada</a></li>
                    <li><a href="/@Resources.Routes.urlTrabajos/@Resources.Routes.urlInteriores">@Resources.Routes.anchorInteriores</a></li>
                    <li><a href="/@Resources.Routes.urlTrabajos/@Resources.Routes.urlParcela">@Resources.Routes.anchorParcela</a></li>
                </ul>
            </li>
            <li><a href="/@Resources.Routes.urlPresupuesto">@Resources.Routes.anchorConocenos</a></li>
            <li><a href="/@Resources.Routes.urlContacto">@Resources.Routes.anchorContacto</a></li>
        </ul>


        <div class="col-sm-6 col-xs-4 text-center">
            <div class="row1wrapper">
                <span class="fa fa-facebook-square whiteFont"></span>
                <span class="fa fa-google-plus-square whiteFont"></span>
            </div>
            <div class="row2wrapper">
                <span class="fa fa-twitter-square whiteFont"></span>
                <span class="fa fa-linkedin-square whiteFont"></span>
            </div>
        </div>
        <hr />
        <div class="col-xs-12">
            <p>&nbsp;</p>
            <h4 class="year whiteFont">(C) 2015  |  Pagina Informativa  |  Sevilla</h4>
            <h4 class="email bold blackFont">info@jmhermanos.es</h4>
        </div>
       
    </div>
    <!-- Back To end -->
    <a href="#0" class="cd-top text-center">
        <span class="fa fa-angle-up fa-3x" id="backToTop"></span>
    </a>

    <!-- SCRIPTS ======================================================= -->
    <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <script>window.jQuery || document.write('<script src="Scripts\vendor\jquery-1.12.0.min.js"><\/script>')</script>
    <!-- Custom Bundle --------------------->
    @Scripts.Render("~/bundles/PluginAndMain")
    @RenderSection("scripts", required: false)

    <!-- Google Analytics: change UA-XXXXX-X to be your site's ID ======================================================= --><!-- . -->
    <script>
        (function (b, o, i, l, e, r) {
            b.GoogleAnalyticsObject = l; b[l] || (b[l] =
            function () { (b[l].q = b[l].q || []).push(arguments) }); b[l].l = +new Date;
            e = o.createElement(i); r = o.getElementsByTagName(i)[0];
            e.src = 'https://www.google-analytics.com/analytics.js';
            r.parentNode.insertBefore(e, r)
        }(window, document, 'script', 'ga'));
        ga('create', 'UA-XXXXX-X', 'auto'); ga('send', 'pageview');
    </script>
</body>
</html>
